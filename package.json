{
  "name": "event-e3",
  "version": "8.0.6",
  "description": "Universal light Event Emitter",
  "license": "MIT",
  "type": "module",
  "main": "event-e3.js",
  "scripts": {
    "test": "ava",
    "bundle": "rollup event-e3.js --format umd --name Emitter --file built/event-e3.js",
    "prepublishOnly": "npm run bundle",
    "lint-fix": "eslint --ignore-path .gitignore source --fix event-e3.js",
    "lint": "eslint --ignore-path .gitignore source event-e3.js"
  },
  "devDependencies": {
    "ava": "^3.14.0",
    "eslint": "^6.5.1",
    "eslint-config-red": "^1.4.1",
    "esm": "^3.2.25",
    "rollup": "^1.17.0"
  },
  "ava": {
		"files": [
			"tests/*.js"
		],
    "failFast": true,
    "failWithoutAssertions": false
  },
  "eslintConfig": {
    "extends": [
      "red"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {}
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {}
  },
  "files": [
    "event-e3.js",
    "built",
    "Changelog.md",
    "LICENSE",
    "source"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/GrosSacASac/event-e3.git"
  },
  "keywords": [
    "browser",
    "node.js",
    "universal",
    "publish",
    "subscribe",
    "listen",
    "message",
    "sender",
    "receiver",
    "observer",
    "push",
    "distribution",
    "event",
    "emitter",
    "3"
  ]
}
